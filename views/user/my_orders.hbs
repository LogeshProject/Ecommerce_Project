<script src="/assets/js/vendor/bootstrap.bundle.min.js"></script>

<style>
    .alert-warning {
        color: #98530c;
        background-color: #ffe8d0;
        border-color: #fedcb9;
    }

    .alert-warning .alert-link {
        color: #7a420a;
    }

    .alert-warning-light {
        color: rgba(36, 20, 3, 0.52);
        background-color: rgba(255, 252, 249, 0.84);
        border-color: rgba(255, 250, 244, 0.76);
    }

    .alert-warning-light .alert-link {
        color: rgba(21, 12, 2, 0.616);
    }

    .rounded-pill {
        border-radius: 50rem !important;
    }
</style>

<body>
    <main class="main">
        <div class="page-header breadcrumb-wrap">
            <div class="container">
                <div class="breadcrumb">
                    <a href="/" rel="nofollow">Home</a>
                    <span></span> <a href="/profile" rel="nofollow">Profile</a>
                    <span></span> Orders
                </div>
            </div>
        </div>
        <div class="container p-5 m-5">
            <section class="content-main col-md-11">
                <div class="content-header">
                    <h2 class="content-title p-3"
                        style="font-family: 'Times New Roman', Times, serif;margin-left: 10%;">Profile setting </h2>
                </div>
                <div class="card" style="margin-left: 10%;">
                    <div class="card-body">
                        <div class="row gx-5">
                            <aside class="col-lg-3 border-end">
                                <nav class="nav nav-pills flex-lg-column mb-4">
                                    <a class="nav-link " aria-current="page" href="/profile">General</a>
                                    <a class="nav-link" style="background-color: rgb(8,129,120);color: white;"
                                        href="/my_orders">Orders</a>

                                    <a class="nav-link" href="/wallet">Wallet</a>
                                    <a class="nav-link" href="/adresses">My Address</a>
                                    <a class="nav-link" href="#">Account details</a>
                                    <a class="nav-link" href="#">Newsletter</a>
                                </nav>
                            </aside>
                            <div class="col-lg-9">
                                <section class="content-body">
                                    <div class="content-header">
                                        <div>
                                            <h2 class="content-title card-title">Order List </h2>
                                        </div>
                                        <div>
                                            <input type="text" placeholder="Search order ID"
                                                class="form-control bg-white">
                                        </div>
                                    </div>
                                    <div class="card mb-4">
                                        <header class="card-header">
                                            <div class="row gx-3">
                                                <div class="col-lg-4 col-md-9 me-auto">
                                                    <input type="text" placeholder="Search..." class="form-control">
                                                </div>
                                                <div class="col-lg-3 col-6 col-md-3">
                                                    <select class="form-select">
                                                        <option style="font-size: ;">Status</option>
                                                        <option>Active</option>
                                                        <option>Disabled</option>
                                                        <option>Show all</option>
                                                    </select>
                                                </div>

                                            </div>
                                        </header> <!-- card-header end// -->
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table class="table table-hover">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col" class="text-center">Order #ID</th>
                                                            <th scope="col" class="text-center">Payment method</th>
                                                            <th scope="col" class="text-center">Total</th>
                                                            <th scope="col" class="text-center">Status</th>
                                                            <th scope="col" class="text-center">Date</th>
                                                            <th scope="col" class="text-center"> Action </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="order_table">
                                                        {{#each myOrders}}
                                                        <tr>
                                                            <td class="text-center">{{this.orderId}}</td>
                                                            <td class="text-center">{{this.paymentMethod}}</td>
                                                            {{#if this.amountAfterDscnt}}
                                                            <td class="text-center"> ₹ {{this.amountAfterDscnt}}</td>
                                                            {{else}}
                                                            <td class="text-center"> ₹ {{this.total}}</td>
                                                            {{/if}}
                                                            {{#ifeq this.status 'Shipped'}}
                                                            <td class="text-center"><span
                                                                    class="badge bg-primary">{{this.status}}</span></td>
                                                            {{/ifeq}}
                                                            {{#ifeq this.status 'Delivered'}}
                                                            <td class="text-center"><span
                                                                    class="badge bg-success">{{this.status}}</span></td>
                                                            {{/ifeq}}
                                                            {{#ifeq this.status 'pending'}}
                                                            <td class="text-center"><span
                                                                    class="badge bg-secondary">{{this.status}}</span>
                                                            </td>
                                                            {{/ifeq}}
                                                            {{#ifeq this.status 'Returned'}}
                                                            <td class="text-center"><span
                                                                    class="badge bg-warning">{{this.status}}</span></td>
                                                            {{/ifeq}}
                                                            {{#ifeq this.status 'Cancelled'}}
                                                            <td class="text-center"><span
                                                                    class="badge bg-danger">{{this.status}}</span></td>
                                                            {{/ifeq}}
                                                            <td class="text-center">{{this.date}}</td>
                                                            <td class="text-center">
                                                                <input type="hidden" name="order_id"
                                                                    value="{{this._id}}">
                                                                <a href="/order_details?id={{this._id}}" type="button"
                                                                    class="btn btn-md rounded font-sm">Detail</a>
                                                            </td>
                                                        </tr>
                                                        {{/each}}












                                                    </tbody>
                                                </table>

                                            </div> <!-- table-responsive //end -->
                                        </div> <!-- card-body end// -->
                                    </div> <!-- card end// -->

                                    <div class="pagination-area mt-15 mb-50">
                                        <nav aria-label="Page navigation example">
                                            <ul class="pagination justify-content-start">
                                                {{#each pages}}
                                                <li class="page-item active"><a class="page-link"
                                                        href="?page={{this}}">{{this}}</a></li>
                                                {{/each}}
                                            </ul>
                                        </nav>
                                    </div>
                                </section> <!-- content-main end// -->
                            </div> <!-- col.// -->
                        </div> <!-- row.// -->
                    </div> <!-- card body end// -->
                </div> <!-- card end// -->
            </section> <!-- content-main end// -->
        </div>
    </main>




    <script src="/assetsAdmin/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/assetsAdmin/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/assetsAdmin/js/vendors/select2.min.js"></script>
    <script src="/assetsAdmin/js/vendors/perfect-scrollbar.js"></script>
    <script src="/assetsAdmin/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/assetsAdmin/js/main.js" type="text/javascript"></script>
</body>