<!DOCTYPE html>
<html>

<head>
	<title>Coupon Adding Form</title>
	<link rel="stylesheet" type="text/css"
		href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
	<style type="text/css">
		body {
			background-color: #f5f5f5;
		}

		.card {
			border: none;
			border-radius: 10px;
			box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
		}

		.card-title {
			font-size: 1.5rem;
			font-weight: 600;
			color: #333;
		}

		.form-control {
			border-radius: 5px;
			border-color: #ccc;
			box-shadow: none;
			font-size: 1rem;
			padding: 1.5rem;
			margin-bottom: 1.5rem;
		}

		.form-control:focus {
			border-color: #007bff;
			box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, .25);
		}

		.form-group label {
			font-weight: 500;
			color: #555;
			margin-bottom: 0.5rem;
		}

		.btn-primary {
			background-color: #007bff;
			border-color: #007bff;
			font-size: 1.1rem;
			font-weight: 600;
			padding: .75rem 1.5rem;
			transition: background-color 0.2s ease, border-color 0.2s ease;
		}

		.btn-primary:hover,
		.btn-primary:focus {
			background-color: #0069d9;
			border-color: #0062cc;
			box-shadow: none;
		}
	</style>
</head>


<body>
	<div class="container ">
		<div class="row ">
			<div class="col-md-6 mx-auto mt-5">
				<div class="card">
					<div class="card-body">

						<p style="text-align: center; color: green;" class="mt-4">{{couponMsg}}</p>
						<p style="text-align: center; color: red;" class="mt-4">{{couponExMsg}}</p>

						<h2 class="card-title text-center mb-4">Add Coupon</h2>
	<form action="/admin/add_coupon" method="post" id="couponForm">
    <div class="form-group">
        <label for="coupon-code">Coupon Code</label>
        <input type="text" class="form-control" id="coupon-code" placeholder="Enter coupon code" name="code" required onkeyup="validateCouponCode()">
        <p style="color: red;" id="codeError"></p>
    </div>
    <div class="form-group">
        <label for="discount">Discount (%)</label>
        <div class="input-group">
            <input type="number" class="form-control" id="discount" placeholder="Enter discount amount" name="percent" required onkeyup="validateDiscount()">
            <div class="input-group-append">
                <span class="input-group-text">%</span>
            </div>
        </div>
        <p style="color: red;" id="discountError"></p>
    </div>
    <div class="form-group">
        <label for="expiry-date">Expiry Date</label>
        <input type="date" class="form-control" id="expiry-date" name="expDate" required onkeyup="validateExpiryDate()">
        <p style="color: red;" id="expiryDateError"></p>
    </div>
    <div class="form-group text-center">
        <button type="submit" class="btn btn-primary">Add Coupon</button>
    </div>
</form>
					</div>
				</div>
			</div>
		</div>
	</div>



<script>
    const codeInput = document.getElementById("coupon-code");
    const discountInput = document.getElementById("discount");
    const expiryDateInput = document.getElementById("expiry-date");
    const codeError = document.getElementById("codeError");
    const discountError = document.getElementById("discountError");
    const expiryDateError = document.getElementById("expiryDateError");

    function validateCouponCode() {
        const couponCodePattern = /^[a-zA-Z0-9]{6,}$/; // Alphanumeric, at least 6 characters
        if (!couponCodePattern.test(codeInput.value.trim())) {
            codeError.textContent = "Coupon code must be alphanumeric and at least 6 characters";
        } else {
            codeError.textContent = "";
        }
    }

    function validateDiscount() {
        if (discountInput.value.trim() === "" || parseFloat(discountInput.value) <= 0) {
            discountError.textContent = "Discount amount must be greater than 0";
        } else {
            discountError.textContent = "";
        }
    }

    function validateExpiryDate() {
        if (expiryDateInput.value.trim() === "") {
            expiryDateError.textContent = "Expiry date is required";
        } else {
            expiryDateError.textContent = "";
        }
    }

    // Event listener for form submission
    const couponForm = document.getElementById("couponForm");
    couponForm.addEventListener("submit", function(event) {
        // Prevent form submission if any field is invalid
        if (!validateForm()) {
            event.preventDefault();
        }
    });

    // Function to validate entire form
    function validateForm() {
        validateCouponCode();
        validateDiscount();
        validateExpiryDate();

        // Check if any error message exists
        if (codeError.textContent || discountError.textContent || expiryDateError.textContent) {
            return false; // Return false if any error exists
        }
        return true; // Return true if all fields are valid
    }
</script>