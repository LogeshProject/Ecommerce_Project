<script>

    function viewImage1(event) {
        document.getElementById('imgView1').src = URL.createObjectURL(event.target.files[0])
    }

    function viewImage(event, index) {
        let input = event.target;
        let reader = new FileReader();

        reader.onload = function () {
            let dataURL = reader.result;
            let image = document.getElementById('imgView' + index);
            image.src = dataURL;

            // Initialize Cropper.js on the image
            let cropper = new Cropper(image, {
                aspectRatio: 1 / 1, // Initial aspect ratio
                viewMode: 1,
                guides: true,
                background: false,
                autoCropArea: 1,
                zoomable: true
            });


            // Show the image cropper container
            let cropperContainer = document.querySelector('#croppedImg' + index).parentNode;
            cropperContainer.style.display = 'block';

            // Update the cropped image when the "Save" button is clicked
            let saveButton = document.querySelector('#saveButton' + index);
            saveButton.addEventListener('click', async function () {
                let croppedCanvas = cropper.getCroppedCanvas();
                let croppedImage = document.getElementById("croppedImg" + index);
                croppedImage.src = croppedCanvas.toDataURL('image/jpeg', 1.0);

                // Generate a unique name for the cropped image file based on the current timestamp
                let timestamp = new Date().getTime();
                let fileName = `cropped-img-${timestamp}-${index}.png`;

                await croppedCanvas.toBlob(blob => {
                    let input = document.getElementById('input' + index)
                    let imgFile = new File([blob], fileName, blob)
                    const fileList = new DataTransfer();
                    fileList.items.add(imgFile);
                    input.files = fileList.files
                });
                // cropperContainer.style.display = 'none';
            });
        };
        reader.readAsDataURL(input.files[0]);
    }



function Validation() {
    var errors = []; // Array to store validation errors

    var fileInput = document.getElementById('input1');

    let productName = document.getElementById("productName").value;
    let longdescription = document.getElementById("longdescription").value;
    let discountprice = document.getElementById("discountprice").value;
    let Qty = document.getElementById("Qty").value;
    let price = document.getElementById("price").value;

    let productNameRegex = /^[a-zA-Z0-9\s'-]+$/;
    let positiveNumberRegex = /^(0|[1-9]\d*)$/;
    let descriptionRegex = /^(?!\s*$)[\s\S]{1,100}$/;

    let productNameAlert = document.getElementById("productNameAlert");
    let qtyAlert = document.getElementById("qtyAlert");
    let discountAlert = document.getElementById("discountAlert");
    let priceAlert = document.getElementById("priceAlert");
    let longAlert = document.getElementById("longAlert");
    let imgAlert = document.getElementById('imgAlert');

    // Clear previous alerts
    productNameAlert.innerHTML = "";
    qtyAlert.innerHTML = "";
    discountAlert.innerHTML = "";
    priceAlert.innerHTML = "";
    longAlert.innerHTML = "";
    imgAlert.innerHTML = "";

    if (!productName.match(productNameRegex)) {
        errors.push("Name Not Valid");
        productNameAlert.textContent = "Invalid product name. Only alphanumeric characters, spaces, apostrophes, and hyphens are allowed.";
    }

   if (!price || !price.match(positiveNumberRegex)) {
    errors.push("Please Check Price Again");
}
if (!discountprice || !discountprice.match(positiveNumberRegex)) {
    errors.push("Please Check Discount Again");
}
if (!Qty || !Qty.match(positiveNumberRegex)) {
    errors.push("Please Check Qty Again");
}




    if (!longdescription.match(descriptionRegex)) {
        errors.push("Please Check Description Again");
    }

    if (fileInput.files.length === 0) {
        errors.push("Please choose an image");
    }

    // Additional check for negative values
    if (price < 0) {
        errors.push("Price cannot be less than 0");
    }
    if (discountprice < 0) {
        errors.push("Discount can't be less than 0");
    }
    if (Qty < 0) {
        errors.push("Stock cannot be less than 0");
    }

    // Display all error messages
  if (errors.length > 0) {
   
    
    // Separate condition for price validation error
    if (errors.includes("Please Check Price Again")) {
        priceAlert.innerHTML = "Please Check Price Again";
    }
    if (errors.includes("Price cannot be less than 0")) {
        priceAlert.innerHTML = "Price cannot be less than 0";
    }
     if (errors.includes("Please Check Qty Again")) {
        qtyAlert.innerHTML = "Please Check Qty Again";
    }
    if (errors.includes("Stock cannot be less than 0")) {
        qtyAlert.innerHTML = "Stock cannot be less than 0";
    }
     if (errors.includes("Please Check Discount Again")) {
        discountAlert.innerHTML = "Please Check Discount Again";
    }
    if (errors.includes("Discount can't be less than 0")) {
        discountAlert.innerHTML = "Discount can't be less than 0";
    }
    longAlert.innerHTML = errors.includes("Please Check Description Again") ? "Please Check Description Again" : "";
    imgAlert.innerHTML = errors.includes("Please choose an image") ? "Please choose an image" : "";

    return false; // Prevent form submission
}




    return true; // Allow form submission if no errors
}


