<script>
    function confirmEditProduct(id) {
        Swal.fire({
            title: 'Edit Product',
            text: "Do you want to make changes to this product?",
            icon: 'info',
            showCancelButton: true,
            confirmButtonColor: '#4caf50', // Green color for confirmation
            cancelButtonColor: '#f44336',  // Red color for cancel
            confirmButtonText: 'Yes, edit it!',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/admin/edit_product/' + id;
            }
        })
    }
</script>