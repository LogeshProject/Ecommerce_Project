<main class="main-nowrap">

    <section class="content-main">
        <div class="container-fluid">
            <div class="row flex-nowrap">
                <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 ">

                </div>
                <div class="col py-3 d-flex justify-content-center mt-2">

                    <div class="col-xl-8">
                        <!-- Account details card-->
                        <div class="card mb-4 ">
                            <div class="card-header text-center">Order details</div>
                            <div class="card-body">

                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col" class="text-center">Name</th>
                                            <th scope="col" class="text-center">Regular Price</th>
                                            <th scope="col" class="text-center">Quantity</th>

                                            <th scope="col" class="text-center">Total Price</th>
                                            <th scope="col" class="text-center">Image</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        {{#each orderedProDet}}
                                        <tr>
                                            <td scope="row" class="text-center">{{this.name}}</td>
                                            <td class="text-center"> ₹ {{this.price}}</td>
                                            <td class="text-center">{{this.quantity}}</td>

                                            <td class="text-center"> ₹ {{subtract this.price this.DiscountPrice}}</td>

                                            <td class="text-center"><img style="width: 50px; height: auto;"
                                                    src="/images/products/{{this.image}}" alt="product image">
                                            </td>
                                            
                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table>


                                <div class="d-flex justify-content-between border mt-5 p-5" style="color: #000;">
                                    <div class="mt-3 ">

                                        <p class="mb-2">Delivery Charge : ₹ <strong>50</strong></p>
                                        <p class="mb-2">Total amount : ₹ <strong>{{myOrderDetails.total}}</strong></p>

                                        <p class="mb-2">Payment method: {{myOrderDetails.paymentMethod}}</p>



                                        




                                        {{#if myOrderDetails.discountAmt}}
                                        <p class="mb-2">Amount after discount :
                                            ₹ <strong>{{myOrderDetails.amountAfterDscnt}}</strong></p>
                                        <p class="mb-2">Discount amount : ₹
                                            <strong>{{myOrderDetails.discountAmt}}</strong>
                                        </p>
                                        <p class="mb-2" style="color: green;">Coupon used: {{myOrderDetails.coupon}}</p>
                                        {{else}}
                                        <p class="mb-2" style="color: green;">No coupon applied</p>
                                        {{/if}}

                                        <br><br>

                                        <p class="mb-2"><b style="font-weight: bolder;">Order status : </b>
                                            {{#ifeq myOrderDetails.status 'pending'}}
                                            <span class="badge bg-secondary">{{myOrderDetails.status}}</span>
                                            {{/ifeq}}
                                            {{#ifeq myOrderDetails.status 'Shipped'}}
                                            <span class="badge bg-primary">{{myOrderDetails.status}}</span>
                                            {{/ifeq}}
                                            {{#ifeq myOrderDetails.status 'Delivered'}}
                                            <span class="badge bg-success">{{myOrderDetails.status}}</span>
                                            {{/ifeq}}
                                            {{#ifeq myOrderDetails.status 'Returned'}}
                                            <span class="badge bg-warning">{{myOrderDetails.status}}</span>
                                            {{/ifeq}}
                                            {{#ifeq myOrderDetails.status 'Cancelled'}}
                                            <span class="badge bg-danger">{{myOrderDetails.status}}</span>
                                            {{/ifeq}}
                                            {{#ifeq myOrderDetails.status 'Rejected'}}
                                            <span class="badge bg-danger">{{myOrderDetails.status}}</span>
                                            {{/ifeq}}
                                            {{#ifeq myOrderDetails.status 'Requested'}}
                                            <span class="badge bg-info">{{myOrderDetails.status}}</span>
                                            {{/ifeq}}
                                        </p>

                                    </div>



                                    <div class="">
                                        <h5 class="border-bottom mb-3">Delivery address</h5>
                                        <p>{{address.name}}</p>
                                        <p>Mobile: {{address.mobile}}</p>
                                        <p>{{address.addressLine1}}</p>
                                        <p>{{address.addressLine2}}</p>
                                        <p>{{address.city}}, {{address.state}},</p>
                                        <p>Pin: {{address.pin}}</p>



                                    </div>

                                </div>
                                <br>
                                <div class="container mt-5">
                                    <div class="card p-4 border-0 shadow-sm">
                                        {{#ifeq myOrderDetails.status 'Requested'}}


                                        {{#if myOrderDetails.returnMsg}}
                                        <h5 class="border-bottom pb-2 mb-4">Return Request</h5>
                                        <p class="mb-4" style="color: #000;">{{myOrderDetails.returnMsg}}</p>
                                        <div class="d-flex justify-content-end">
                                            <a id="blockprod" data-product-id="{{myOrderDetails._id}}"
                                                class="btn btn-success btn-sm me-2"
                                                onclick="status('{{myOrderDetails._id}}')">
                                                Approve
                                            </a>
                                            <a href="javascript:void(0);"
                                                onclick="confirmEditProduct('{{myOrderDetails._id}}')"
                                                class="btn btn-danger btn-sm">
                                                <i class="material-icons md-edit"></i> Decline
                                            </a>
                                        </div>

                                        {{/if}}

                                        {{/ifeq }}
                                        {{#ifeq myOrderDetails.status 'Returned'}}
                                        <h5 class="border-bottom pb-2 mb-4">Return Reason</h5>
